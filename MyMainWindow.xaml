<Window x:Class="RevitMEPHoleManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автоматическая расстановка отверстий"
        Height="500" Width="760">

    <!-- корневой контейнер -->
    <Grid Margin="20">
        <!-- строки корневой сетки -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- заголовок -->
            <RowDefinition Height="*"/>
            <!-- область настроек + таблица -->
            <RowDefinition Height="Auto"/>
            <!-- кнопки -->
        </Grid.RowDefinitions>

        <!-- ───────── Заголовок ───────── -->
        <TextBlock Text="Автоматическая расстановка отверстий"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- ───────── Область настроек + таблица ───────── -->
        <Grid Grid.Row="1">
            <!-- две строки: 0 — настройки, 1 — таблица -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ── блок настроек (левая и правая колонки) ── -->
            <Grid Grid.Row="0" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- левая колонка -->
                <StackPanel Grid.Column="0" Margin="10">
                    <TextBlock Text="Выбор семейства:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="FamilyCombo"
                              Height="25"
                              IsEditable="False"/>
                </StackPanel>

                <!-- правая колонка -->
                <StackPanel Grid.Column="1" Margin="10">
                    <TextBlock Text="Зазор вокруг элемента (мм):" Margin="0,0,0,5"/>
                    <TextBox x:Name="ClearanceBox" Height="25"/>

                    <TextBlock Text="Объединять отверстия — макс. расстояние (мм):"
                               Margin="0,20,0,5"/>
                    <TextBox x:Name="MergeDistBox" Height="25"/>
                </StackPanel>
            </Grid>

            <!-- ── DataGrid со статистикой пересечений ── -->
            <DataGrid Grid.Row="1"
                      x:Name="StatsGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Margin="0,10,0,0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Хост"
                                        Binding="{Binding Host}"
                                        Width="120"/>
                    <DataGridTextColumn Header="Host Id"
                                        Binding="{Binding HostId}"
                                        Width="80"/>
                    <DataGridTextColumn Header="MEP Id"
                                        Binding="{Binding MepId}"
                                        Width="80"/>
                    <DataGridTextColumn Header="Форма"
                                        Binding="{Binding Shape}"
                                        Width="80"/>
                    <DataGridTextColumn Header="Ø / Шир., мм"
                                        Binding="{Binding Size1}"
                                        Width="90"/>
                    <DataGridTextColumn Header="Высота, мм"
                                        Binding="{Binding Size2}"
                                        Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- ───────── Кнопки ───────── -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- кнопка Старт -->
            <Button Content="Старт"
                    Width="120" Height="40"
                    Background="LimeGreen" Foreground="White"
                    HorizontalAlignment="Center"
                    Click="StartButton_Click"/>

            <!-- кнопка «?» (справка) -->
            <Button Content="?"
                    Width="30" Height="30"
                    FontSize="14" FontWeight="Bold"
                    Background="#163D7A" Foreground="White"
                    BorderBrush="{x:Null}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Padding="0"
                    Grid.Column="1" Margin="0,0,-18,-17">
                <Button.Resources>
                    <!-- делает кнопку круглой -->
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="22"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
